{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Test",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "--ff",
        "--log-cli-level=DEBUG",
        "--pdb",
        "--setup-show",
        "--durations=5",
        "-sx",
        "-vv",
        "${file}"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": false
    }
    ]
}